<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h2><i class="fas fa-sign-in-alt"></i> Welcome</h2>
      <p>Sign in to your account</p>
    </div>
    <% if (error && error.length > 0) { %>
      <div class="alert alert-error">
        <i class="fas fa-exclamation-circle"></i> <%= error %>
        <% if (error.includes('User not found')) { %>
          <p><a href="/auth/signup" class="alert-link">Create an account</a></p>
        <% } %>
      </div>
    <% } %>
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success">
        <i class="fas fa-check-circle"></i> <%= success %>
      </div>
    <% } %>
    <form method="post" action="/auth/login" class="form">
      <div class="form-group">
        <label for="email"><i class="fas fa-envelope"></i> Email</label>
        <input id="email" type="email" name="email" required autocomplete="email" />
      </div>
      <div class="form-group">
        <label for="password"><i class="fas fa-lock"></i> Password</label>
        <input id="password" type="password" name="password" required autocomplete="current-password" />
      </div>
      <div class="form-actions">
        <button type="button" class="btn btn-outline" onclick="window.location='/'"><i class="fas fa-times"></i> Cancel</button>
        <button type="submit" class="btn btn-primary"><i class="fas fa-sign-in-alt"></i> Login</button>
      </div>
    </form>
    <div class="auth-footer">
      <a href="/auth/forgot"><i class="fas fa-key"></i> Forgot password?</a>
      <br />
      <a href="/auth/signup"><i class="fas fa-user-plus"></i> Don't have an account? Sign up</a>
    </div>
  </div>
</div>